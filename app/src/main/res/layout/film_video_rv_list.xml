<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="10px">

    <ImageView
        android:id="@+id/iv_video_title_list_bg"
        android:layout_width="180px"
        android:layout_height="130px"
        android:layout_margin="5px"/>

    <TextView
        android:id="@+id/tv_video_title_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginTop="25px"
        android:layout_toRightOf="@id/iv_video_title_list_bg"
        android:text=""
        android:textColor="#666666"
        android:textSize="23px"/>

    <TextView
        android:id="@+id/tv_video_title_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_video_title_list_name"
        android:layout_marginLeft="40px"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@id/iv_video_title_list_bg"
        android:text=""
        android:textColor="#a1a1a1"
        android:textSize="23px"/>

    <TextView
        android:id="@+id/tv_video_show_play_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50px"
        android:text=""
        android:textColor="#f34d41"
        android:textSize="28px"/>
</RelativeLayout>