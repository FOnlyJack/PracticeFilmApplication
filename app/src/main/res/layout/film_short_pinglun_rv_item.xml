<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_short_hear_pingluner"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_marginLeft="24px"
            android:layout_marginTop="24px"
            android:background="@drawable/ic_3d"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginTop="24px"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_short_rv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="24px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60px"
                    android:text="è¯„"
                    android:textColor="#669d09"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/tv_short_rv_pingfen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24px"
                    android:text=""
                    android:textColor="#669d09"
                    android:textSize="24px"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_short_rv_pinglun_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24px"
                android:layout_marginRight="24px"
                android:layout_marginTop="30px"
                android:text=""
                android:textColor="#333333"
                android:textSize="24px"/>

            <TextView
                android:id="@+id/tv_short_rv_pinglun_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="30px"
                android:paddingTop="35px"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>